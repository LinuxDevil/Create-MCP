    logger.info(`  âœ“ Resources: ${status.capabilities.resources ? 'enabled' : 'disabled'}`);
    logger.info(`  âœ“ Prompts: ${status.capabilities.prompts ? 'enabled' : 'disabled'}`);
    logger.info(`  âœ“ Elicitations: ${status.capabilities.elicitations ? 'enabled' : 'disabled'}`);
    logger.info(`  âœ“ Sampling: ${status.capabilities.sampling ? 'enabled' : 'disabled'}`);
    
    // Get transport info and provide connection instructions
    const configManager = serverFactory.getConfigManager();
    const transportConfig = configManager.getTransportConfig();
    
    if (transportConfig.type === 'http') {
