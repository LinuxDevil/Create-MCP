{
  "name": "mcp-server-generator",
  "version": "1.0.5",
  "description": "Advanced CLI generator for production-ready Model Context Protocol (MCP) servers with comprehensive Data Analysis Assistant, 8 tools, 9 resources, and 3 intelligent prompts",
  "type": "module",
  "bin": {
    "mcp-server-generator": "./bin/index.js",
    "create-mcp": "./bin/index.js"
  },
  "main": "./lib/cli/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node lib/cli/index.js",
    "dev": "npx tsx src/cli/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test:cli": "node bin/index.js --help",
    "test:create": "mkdir -p test-temp && cd test-temp && node ../bin/index.js test-project --skip-install && cd .. && rm -rf test-temp",
    "pre-publish": "npm run build && npm run test:cli",
    "prepublishOnly": "npm run pre-publish"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "validate-npm-package-name": "^6.0.2"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.6",
    "@types/validate-npm-package-name": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "lib",
    "templates",
    "bin",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "generator",
    "typescript",
    "ai",
    "llm",
    "data-analysis",
    "production-ready",
    "advanced",
    "elicitation",
    "sampling",
    "tools",
    "resources",
    "prompts"
  ],
  "author": "LinuxDevil",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinuxDevil/Create-MCP"
  },
  "bugs": {
    "url": "https://github.com/LinuxDevil/Create-MCP#issues"
  },
  "homepage": "https://github.com/LinuxDevil/Create-MCP#readme"
}
